<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addProduct.AddProductFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEnterBarcode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_input_edit_text"
        android:hint="@string/trouble_scanning_enter_barcode"
        android:textColor="@color/grey_700" />

    <TextView
        android:id="@+id/textViewAddProductGuideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="26dp"
        android:text="@string/align_the_bar_code_within_frame_to_scan_the_product"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonAddProduct"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/textInputEnterBarcode"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:text="@string/ok" />
</RelativeLayout>