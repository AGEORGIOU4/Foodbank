<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_products"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/list_item_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewImage"
                android:layout_width="90dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/a3_ic_ecoscore_a_foreground"
                app:shapeAppearanceOverlay="@style/Circular" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/imageViewImage"
                android:text="Title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/textViewNovaGroup"
                android:text="Grade: A"
                android:textColor="@color/cyan_700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewNovaGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/imageViewImage"
                android:text="Nova: 4"
                android:textColor="@color/cyan_700"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/starredCheckBox"
                style="?android:attr/starStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/textViewTitle"
                android:layout_marginTop="6dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>