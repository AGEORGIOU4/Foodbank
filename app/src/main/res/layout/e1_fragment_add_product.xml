<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.addProduct.AddProductFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInput_enterBarcode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_input_edit_text"
        android:hint="@string/trouble_scanning_enter_barcode"
        android:inputType="number"
        android:textColor="@color/grey_700" />

    <Button
        android:id="@+id/button_addProduct"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/textInput_enterBarcode"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:text="@string/add_product" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_addProduct"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="4dp"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/list_item_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/starredCheckBox"
                android:text="@string/title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView_grade"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_below="@id/textView_title"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/d_img_nutriscore_a"
                android:textColor="@color/cyan_700"
                app:shapeAppearanceOverlay="@style/Circular" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView_ecoScore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/textView_title"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imageView_grade"
                android:background="#00FFFFFF"
                android:src="@drawable/d_img_ecoscore_a"
                android:text="@string/nova_4"
                app:shapeAppearanceOverlay="@style/Circular" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView_novaGroup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/textView_title"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imageView_ecoScore"
                android:src="@drawable/d_img_novagroup_1"
                app:shapeAppearanceOverlay="@style/Circular" />


            <CheckBox
                android:id="@+id/starredCheckBox"
                style="?android:attr/starStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/textView_fetchedData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_addProduct"
        android:layout_marginHorizontal="10dp" />



</RelativeLayout>