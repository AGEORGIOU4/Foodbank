<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Circular">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DefaultButton">
        <item name="maxButtonHeight">56dp</item>
    </style>

    <style name="DefaultListViewBackgroundColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DefaultBackground">
        <item name="android:background">@drawable/main_bg</item>
        <item name="cornerSize">10%</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="BottomNavIconsColor">
        <item name="android:background">@color/grey_300</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListDefaultBackgroundColor">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ListRedBackgroundColor">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="ListBlueBackgroundColor">
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="ListGreenBackgroundColor">
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="ListYellowBackgroundColor">
        <item name="android:backgroundTint">@color/yellow</item>
    </style>


</resources>